<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">

    <!-- Create Tandym Checkout -->
    <route url="/V1/tandym/carts/mine/checkout" method="POST">
        <service class="Tandym\Tandympay\Api\OrderManagementInterface" method="createCheckout"/>
        <resources>
            <resource ref="self" />
        </resources>
        <data>
            <parameter name="cartId" force="true">%cart_id%</parameter>
        </data>
    </route>

    <!-- Create Guest Tandym Checkout -->
    <route url="/V1/tandym/guest-carts/:cartId/checkout" method="POST">
        <service class="Tandym\Tandympay\Api\GuestOrderManagementInterface" method="createCheckout"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
    <!-- Get all Countries for store -->
    <route url="/V1/tandym/getallcountry" method="GET">
        <service class="Tandym\Tandympay\Api\Countryregion\CountryregionInterface" method="getAllCountry"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <!-- Get all Regions for specific country for store -->
    <route url="/V1/tandym/getallregionbycid" method="GET">
        <service class="Tandym\Tandympay\Api\Countryregion\CountryregionInterface" method="getAllRegion"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
</routes>
