<?xml version="1.0"?>
<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="script-src">
            <values>
                <value id="tandym-sdk" type="host">*.bytandym.com</value>
                <value id="sandbox-tandym-sdk" type="host">*.poweredbytandym.com</value>
            </values>
        </policy>
        <policy id="frame-src">
            <values>
                <value id="tandym-checkout" type="host">*.bytandym.com</value>
                <value id="sandbox-tandym-checkout" type="host">*.poweredbytandym.com</value>
            </values>
        </policy>
        <policy id="style-src">
            <values>
                <value id="tandym-style" type="host">*.bytandym.com</value>
                <value id="sandbox-tandym-style" type="host">*.poweredbytandym.com</value>
            </values>
        </policy>
        <policy id="img-src">
            <values>
                <value id="tandym-image" type="host">*.bytandym.com</value>
                <value id="sandbox-tandym-image" type="host">*.poweredbytandym.com</value>
                <value id="tandym-aws-image" type="host">tandym-api.s3.amazonaws.com</value>
            </values>
        </policy>
        <policy id="default-src">
        		<values>
					<value id="tandym_default_prod" type="host">*.bytandym.com</value>
					<value id="tandym_default_staging" type="host">*.poweredbytandym.com</value>
        		</values>
    	</policy>
    	<policy id="form-action">
        		<values>
					<value id="tandym_form_prod" type="host">*.bytandym.com</value>
					<value id="tandym_form_staging" type="host">*.poweredbytandym.com</value>
        		</values>
    	</policy>
        <policy id="frame-src">
        		<values>
            		<value id="tandym_staging" type="host">*.poweredbytandym.com</value>
					<value id="tandym_prod" type="host">*.bytandym.com</value>
        		</values>
    	</policy>
        <policy id="frame-ancestors">
        		<values>
            		<value id="tandym_staging" type="host">*.poweredbytandym.com</value>
					<value id="tandym_prod" type="host">*.bytandym.com</value>
        		</values>
    	</policy>
        
        <policy id="connect-src">
        		<values>
            		<value id="tandym_staging" type="host">*.poweredbytandym.com</value>
					<value id="tandym_prod" type="host">*.bytandym.com</value>			
        		</values>
    	</policy>
		
    </policies>
</csp_whitelist>
